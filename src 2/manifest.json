{
  "manifest_version": 3,
  "name": "ExplAIner",
  "version": "1.0",
  "description": "An extension to auto-generate news explanations",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "128": "android-chrome-512x512.png"
  },
  "action": {
    "default_icon": "android-chrome-512x512.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}